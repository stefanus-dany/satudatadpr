<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.satudata.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_heatmapFragment"
            app:destination="@id/heatmapFragment"
            app:enterAnim="@anim/fadein"
            app:popEnterAnim="@anim/fadein"
            app:exitAnim="@anim/fadeout"
            app:popExitAnim="@anim/fadeout"/>
        <action
            android:id="@+id/action_homeFragment_to_newsDetailFragment"
            app:destination="@id/newsDetailFragment"
            app:enterAnim="@anim/fadein"
            app:popEnterAnim="@anim/fadein"
            app:exitAnim="@anim/fadeout"
            app:popExitAnim="@anim/fadeout"/>
    </fragment>
    <fragment
        android:id="@+id/heatmapFragment"
        android:name="com.satudata.dashboard.heatmap.HeatmapFragment"
        android:label="HeatmapFragment"
        tools:layout="@layout/fragment_heatmap"/>
    <fragment
        android:id="@+id/newsDetailFragment"
        android:name="com.satudata.home.NewsDetailFragment"
        android:label="fragment_news_detail"
        tools:layout="@layout/fragment_news_detail" />
</navigation>