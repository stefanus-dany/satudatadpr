<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/layout_margin_start_xxxlarge_size"
    android:layout_marginEnd="@dimen/layout_margin_end_xxxlarge_size"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        style="@style/formatFont.extrabold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_margin_bottom_xxxlarge_size"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/large_text"
        tools:text="Title" />

    <View
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:background="@color/white" />


    <TextView
        android:id="@+id/subTitle"
        style="@style/formatFont.semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_top_xxxlarge_size"
        android:gravity="center"
        android:textColor="@color/white"
        tools:text="SubTitle" />

</LinearLayout>